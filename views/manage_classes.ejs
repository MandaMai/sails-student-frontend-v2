<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Class</h2>
<button class="btn btn-success" id="addClassButton"><span class="glyphicon glyphicon-plus"></span>Add Class</button>
<table class="table table-striped table-bordered" id="classTable" style="width:100%">
  <thead>
    <tr>
      <th>Class ID</th>
      <th>Instructor ID</th>
      <th>Subject</th>
      <th>Course</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof classes != "undefined" && classes.length > 0){ %>
    <% classes.forEach(function(classItem){ %>
      <tr>
        <td><%= classItem.class_id %></td>
        <td><%= classItem.instructor_id %></td>
        <td><%= classItem.subject %></td>
        <td><%= classItem.course %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton_class" data-classid="<%= classItem.class_id %>"><span class="glyphicon glyphicon-edit"></span></button>
          <button class="btn btn-danger" id="deleteButton_class" data-classid="<%= classItem.class_id %>"><span class="glyphicon glyphicon-remove"></span></button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm_class">Are you sure you want to delete this class?</div>

<form action="/delete_class" method="POST" style="display: none;" id="deleteform_class">
  <input type="hidden" name="class_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageClassForm">
    <input type="hidden" name="class_id">
    <div class="form-group">
      <label for="instructor_id" class="col-sm-2 control-label">Instructor ID</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="instructor_id" name="instructor_id"  placeholder="Instructor ID">
      </div>
    </div>
    <div class="form-group">
      <label for="subject" class="col-sm-2 control-label">Subject</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
      </div>
    </div>
    <div class="form-group">
      <label for="course" class="col-sm-2 control-label">Course</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="course" name="course" placeholder="Course">
      </div>
    </div>
  </form>
  
