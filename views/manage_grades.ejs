<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Grades</h2>
<button class="btn btn-success" id="addGradeButton"><span class="glyphicon glyphicon-plus"></span>Add Grade</button>
<table class="table table-striped table-bordered" id="gradeTable" style="width:100%">
  <thead>
    <tr>
      <th>Grade ID</th>
      <th>Grade</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof grades != "undefined" && grades.length > 0){ %>
    <% grades.forEach(function(grade){ %>
      <tr>
        <td><%= grade.grade_id %></td>
        <td><%= grade.grade %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton_grade" data-gradeid="<%= grade.grade_id %>"><span class="glyphicon glyphicon-edit"></span></button>
          <button class="btn btn-danger" id="deleteButton_grade" data-gradeid="<%= grade.grade_id %>"><span class="glyphicon glyphicon-remove"></span></button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm_grade">Are you sure you want to delete this grade?</div>

<form action="/delete_grade" method="POST" style="display: none;" id="deleteform_grade">
  <input type="hidden" name="grade_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageGradeForm">
  <input type="hidden" name="grade_id">
  <div class="form-group">
    <label for="grade" class="col-sm-2 control-label">Grade</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade" name="grade"  placeholder="Grade" required>
    </div>
  </div>
</form>
