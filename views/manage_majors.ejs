<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Majors</h2>
<button class="btn btn-success" id="addMajorButton"><span class="glyphicon glyphicon-plus"></span>Add Major</button>
<table class="table table-striped table-bordered" id="majorTable" style="width:100%">
  <thead>
    <tr>
      <th>Major ID</th>
      <th>Major</th>
      <th>SAT</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majors != "undefined" && majors.length > 0){ %>
    <% majors.forEach(function(major){ %>
      <tr>
        <td><%= major.major_id %></td>
        <td><%= major.major %></td>
        <td><%= major.sat %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton_major" data-majorid="<%= major.major_id %>"><span class="glyphicon glyphicon-edit"></span></button>
          <button class="btn btn-danger" id="deleteButton_major" data-majorid="<%= major.major_id %>"><span class="glyphicon glyphicon-remove"></span></button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm_major">Are you sure you want to delete this major?</div>

<form action="/delete_major" method="POST" style="display: none;" id="deleteform_major">
  <input type="hidden" name="major_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorForm">
  <input type="hidden" name="major_id">
    <div class="form-group">
      <label for="major" class="col-sm-2 control-label">Major</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="major" name="major" placeholder="Major" required>
      </div>
    </div>
    <div class="form-group">
      <label for="sat" class="col-sm-2 control-label">SAT</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="sat" name="sat" placeholder="sat">
      </div>
    </div>
  </form>
  
